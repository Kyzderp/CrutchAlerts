<GuiXml>
    <Controls>
        <TopLevelControl name="CrutchAlertsInfoPanel" clampedToScreen="false" mouseEnabled="false" movable="false" hidden="false">
            <Dimensions x="300" y="0"/>
            <OnMoveStop>
                CrutchAlerts:SavePosition()
            </OnMoveStop>
            <Controls>
                <!-- <Backdrop name="$(parent)Backdrop" centerColor="10000000" edgeColor="00000000" tier="LOW"><AnchorFill/><Edge edgeSize="1"/></Backdrop> -->
                <Control name="$(parent)Side" tier="MEDIUM" hidden="false">
                    <Dimensions x="4"/>
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="-10"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="-10"/>
                    <Controls><Backdrop name="$(parent)Backdrop" centerColor="753bdb5e" edgeColor="00000000" tier="LOW"><AnchorFill/><Edge edgeSize="1"/></Backdrop></Controls>
                </Control>
            </Controls>
        </TopLevelControl>

        <Label name="CrutchAlertsInfoPanelLineTemplate" color="FFFFFF" text="Panel text" wrapMode="ELLIPSIS" verticalAlignment="CENTER" horizontalAlignment="LEFT" hidden="false" virtual="true">
            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
        </Label>
    </Controls>
</GuiXml>
